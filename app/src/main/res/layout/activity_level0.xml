<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#f0f0ff"
    tools:context=".level0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction : "
            android:textColor="#f00000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#f00000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In this section we see about ASO Introduction."
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que. what is app store optimization??"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ans. App store optimization is the process of improving the visibility of a mobile app in an Apple App Store and the Google Play Store. Just like search engine optimization is for websites, app store optimization is for mobile apps. "
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que. Why App Store Optimization is important for app growth??"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ans. More than 5 million apps are available to download from the Apple App Store and the Google Play Store. ... The primary goal of App Store Optimization is to increase downloads and the number of loyal users."
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="that`s all for this section."
            android:textColor="#38c"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="15dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have any query/question than feel free and ask us."
            android:textColor="#38c"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="18dp" />
    </LinearLayout>


</ScrollView>