<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0ff"
    android:padding="10dp"
    tools:context=".level4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Screenshots : "
            android:textColor="#f00000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#f00000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In this section you have to drag and drop your APP screenshots for different
types devices."
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/aso6"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:src="@drawable/aso7"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="you have to drag and drop APP screenshots as possible as you can because it`s very useful for ASO."
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="here you will find a link for taking a best screenshots for this section
https://www.appstorescreenshot.com/"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(it`s not any types of web promotion. spread a knowledge for free is our aim.)"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTE:-
here you have to put atleast 2 screenshots
and you can put 8 maximum screenshots per type."
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="that`s all for this section."
            android:textColor="#38c"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have any query/question than feel free and ask us."
            android:textColor="#38c"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="18dp" />
    </LinearLayout>

</ScrollView>