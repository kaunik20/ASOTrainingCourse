<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0ff"
    android:padding="10dp"
    tools:context=".level7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A/B Testing : "
            android:textColor="#f00000"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#f00000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In this section you have to work on A/B testing."
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/aso13"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/aso14"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is very effective way to understand
the choice of your users."
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In A/B testing , you can make 'A' choice and 'B' choice and all this things work on that."
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it`s work on different part of your app like logo etc."
            android:textColor="#000000"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="that`s all for this section."
            android:textColor="#38c"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="15dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you have any query/question than feel free and ask us."
            android:textColor="#38c"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginTop="15dp"
            android:textSize="18dp" />
    </LinearLayout>

</ScrollView>